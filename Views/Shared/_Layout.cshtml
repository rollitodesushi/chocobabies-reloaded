<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChocobabiesReloaded</title>
    <link rel="stylesheet" href="https://cdn.tailwindcss.com/3.4.3"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-100">
    <header class="bg-indigo-600 text-white p-4">
        <nav class="container mx-auto flex justify-between items-center">
            <div class="text-xl font-bold">Chocobabies</div>
            <div class="space-x-4 hidden md:block">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="hover:text-indigo-200">Inicio</a>
                <a asp-area="" asp-controller="Rifa" asp-action="Crear" class="hover:text-indigo-200">Crear Rifa</a>
                <a asp-area="" asp-controller="Rifa" asp-action="Lista" class="hover:text-indigo-200">Mis Rifas</a>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" class="inline">
                        <button type="submit" class="hover:text-indigo-200">Salir</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="hover:text-indigo-200">Iniciar Sesión</a>
                }
            </div>
            <div class="md:hidden">
                <button id="menuButton" class="focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
            </div>
        </nav>
        <div id="mobileMenu" class="md:hidden bg-indigo-700 p-4 space-y-2 hidden">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="block hover:text-indigo-200">Inicio</a>
            <a asp-area="" asp-controller="Rifa" asp-action="Crear" class="block hover:text-indigo-200">Crear Rifa</a>
            <a asp-area="" asp-controller="Rifa" asp-action="Lista" class="block hover:text-indigo-200">Mis Rifas</a>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" class="block">
                    <button type="submit" class="hover:text-indigo-200">Salir</button>
                </form>
            }
            else
            {
                <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="block hover:text-indigo-200">Iniciar Sesión</a>
            }
        </div>
    </header>
    <main class="container mx-auto p-4">
        @RenderBody()
    </main>
    <footer class="bg-gray-800 text-white text-center p-4 mt-6">
        <p>© 2025 ChocobabiesReloaded - Todos los derechos reservados</p>
    </footer>

    @RenderSection("Scripts", required: false)
    <script>
        const menuButton = document.getElementById('menuButton');
        const mobileMenu = document.getElementById('mobileMenu');
        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>